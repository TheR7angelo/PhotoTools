<UserControl x:Class="PhotoTools.Views.Settings.ColorEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PhotoTools.Views.Settings"
             xmlns:colorPicker="clr-namespace:ColorPicker;assembly=ColorPicker"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <colorPicker:StandardColorPicker x:Name="ColorPicker" Style="{StaticResource  DefaultColorPickerStyle}" Width="40" Height="40" ShowAlpha="False" SelectedColor="White" SecondaryColor="White"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtColorEditValidation" Content="Validation" Click="BtColorEditValidation_OnClick"/>
                <Button x:Name="BtColorEditAnnul" Content="Annuler" Click="BtColorEditAnnul_OnClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
