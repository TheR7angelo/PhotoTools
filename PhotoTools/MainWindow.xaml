<mah:MetroWindow x:Class="PhotoTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoTools"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:views="clr-namespace:PhotoTools.Views"
        Title="MainWindow"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        mc:Ignorable="d">


    <!-- Barre top -->
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button Name="BtMainGithub" Click="ButtonBase_OnClick">
                <Image Source="/Utils/Img/github.png" Stretch="Fill" Margin="3"/>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button Click="BtSettings_OnClick" ToolTip="Open setttings">
                <Image Source="/Utils/Img/parametres.png" Stretch="Fill" Margin="3"/>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    <Grid>
        <views:MainView/>
    </Grid>
</mah:MetroWindow>
