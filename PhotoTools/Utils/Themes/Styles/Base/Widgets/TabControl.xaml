<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="TabControlBase" TargetType="{x:Type TabControl}">
        <Setter Property="Background" Value="{DynamicResource RgbM1}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource RgbM1}"/>
    </Style>
    
    <Style TargetType="{x:Type TabControl}" BasedOn="{StaticResource TabControlBase}"/>
</ResourceDictionary>